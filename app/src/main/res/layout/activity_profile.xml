<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.minhnguyen.authentication_android.ProfileActivity">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tap on camera to choose profile picture"
    android:textAlignment="center"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_camera1"
        android:layout_margin="20sp"/>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>
    <EditText
    android:id="@+id/editTextDisplayName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Display Name" />

<TextView
    android:id="@+id/textViewVerified"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Verified"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

<Button
    android:id="@+id/buttonSave"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="25dp"
    android:background="@drawable/rounded_button_solid"
    android:paddingLeft="55dp"
    android:paddingRight="55dp"
    android:text="Save"
    android:textAllCaps="false" />
</LinearLayout>
